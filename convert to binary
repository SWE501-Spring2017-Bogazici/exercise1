
//program that convert long to binary - Büşra Öndül
#include <iostream>
using namespace std;
int main()
{
    long a,b,i=1,sum=0;
    cout<<"Enter a number to be converted to binary:";
    cin>>a;
    do
    {
        b=a%2;
        sum=sum + (i*b);
        a=a/2;
        i=i*10;
    }while(a>0);
    cout<<"The binary of the given number is:"<<sum<<endl;
    cin.get();
    cin.get();
 
    return 0;
}
